<!DOCTYPE html>
<html>
<head>
	<title>Conexion a MySQL</title>
</head>
<body>
	<?php
		$servername = "localhost";
		$username = "root";
		$password = "";
		$dbname = "Musica";

		//Crear Conexion
		$conn = new mysqli($servername, $username, $password);

		//Comprobar conexion
		if($conn->connect_error)
		{
			die("Conexion fallida: " . $conn->connect_error);
		}
		else
		{
			echo "Conexion creada correctamente";
			echo "<br>";
		}

		//crear database
		$sql = "CREATE DATABASE Musica";
		if($conn->query($sql) === TRUE)
		{
			echo "Database creada con existo";
			echo "<br>";
		}
		else
		{
			echo "Error creando la database" . $conn->error;
			echo "<br>";
		}

		//crear tabla
		$sql = "CREATE TABLE Grupos FROM Musica(
			id int(5) PRIMARY KEY,
			Nombre VARCHAR(50),
			Genero VARCHAR(50)
		)";

		if($conn->query($sql)===TRUE)
		{
			echo "Tabla Grupos creada correctamente";
			echo "<br>";
		} 
		else
		{
			echo "Error al crear la tabla" . $conn->error;
			echo "<br>";
		}


		$conn->close();
	?>

</body>
</html>
